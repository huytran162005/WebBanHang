@model List<WebBanHang.Models.Product>
@{
    ViewData["Title"] = "Sản phẩm theo loại";
    var categories = ViewBag.Categories as List<WebBanHang.Models.CategoryWithCount>;
    var selectedCategoryName = ViewBag.SelectedCategoryName as string;
    var selectedCategoryId = ViewBag.SelectedCategoryId as int? ?? 0;
}

<h2 class="mb-4">Danh sách sản phẩm theo loại</h2>

<div class="row">
    <!-- Danh sách danh mục bên trái -->
    <div class="col-md-3">
        <div class="card">
            <div class="card-header bg-dark text-white text-center">
                <h5 class="mb-0">CATEGORY LIST</h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var categoryItem in categories)
                {
                    var isActive = categoryItem.Category.Id == selectedCategoryId ? "active bg-dark text-white" : "";
                    <a href="javascript:void(0)"
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center category-item @isActive"
                       data-id="@categoryItem.Category.Id">
                        @categoryItem.Category.Name
                        <span class="badge bg-secondary rounded-pill">@categoryItem.ProductCount</span>
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Danh sách sản phẩm bên phải -->
    <div class="col-md-9">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">PRODUCT LIST OF @(selectedCategoryName?.ToUpper() ?? "SẢN PHẨM")</h5>
            </div>
            <div class="card-body">
                <div class="row row-cols-1 row-cols-md-3 g-4" id="products-container">
                    @await Html.PartialAsync("_ProductListPartial", Model)
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.category-item').click(function() {
                var categoryId = $(this).data('id');

                // Thêm class active cho danh mục được chọn
                $('.category-item').removeClass('active bg-dark text-white');
                $(this).addClass('active bg-dark text-white');

                // Lấy sản phẩm theo danh mục
                $.ajax({
                    url: '@Url.Action("GetProductsByCategory", "Products", new { area = "Customer" })/' + categoryId,
                    type: 'GET',
                    success: function(data) {
                        // Cập nhật danh sách sản phẩm
                        $('#products-container').html($(data).find('#products-container').html());
                        // Cập nhật tiêu đề
                        $('.card-header h5').html('PRODUCT LIST OF ' + $(data).find('.card-header h5').text().split('OF ')[1]);
                    },
                    error: function() {
                        alert('Đã xảy ra lỗi khi tải sản phẩm!');
                    }
                });
            });
        });
    </script>
}